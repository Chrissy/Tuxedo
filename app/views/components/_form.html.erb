<%= form_for @component, url: {action: form_action()}, html: {method: "post"} do |f| %>
  <div class="form_block primary">
    <%= f.text_field :name, :value => default_text(:name), :placeholder => "name" %>
    <%= f.text_area :description, :value => default_text(:description), :placeholder => "description" %>
  </div>
  <div class="form_block secondary">
    <%= f.filepicker_field :image, :button_text => "upload a cover photo"  %>
    <%= f.select :list, @component.options_for_select %>
    <%= f.submit(submit_text()) %>
  </div>
<% end %>