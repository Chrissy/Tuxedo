<%= form_for @component, url: {action: form_action()}, html: {method: "post"} do |f| %>
  <div class="form_block primary">
    <%= f.text_field :name, :value => default_text(:name), :placeholder => "name" %>
    <%= f.text_area :description, :value => default_text(:description), :placeholder => "description" %>
    <%= f.text_field :nick, :value => default_text(:nick), :placeholder => "nickname" %>
    <%= f.select :aka_id, options_for_select(aka_options, @component.aka_id) %>
  </div>
  <div class="form_block secondary">
    <%= f.label "component recipes" %>
    <%= f.text_area :list_as_markdown, :value => @component.list_for_textarea, :class => "autocomplete recipes components lists" %>
    <%= render "shared/image_options", :element => @component, :f => f %>
    <%= f.submit(submit_text()) %>
  </div>
<% end %>