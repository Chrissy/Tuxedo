<% class_name ||= "" %>
<% tags ||= [] %>
<% tag_list = [
  "stirred",
  "shaken",
  "built in glass",
  "up",
  "rocks",
  "large cube",
  "crushed ice",
  "cracked ice",
  "cocktail glass",
  "collins glass",
  "rocks glass",
  "tiki glass",
  "toddy glass",
] %>
<% (tag_list & tags.map(&:name)).each do |tag| %>
  <%= render 'recipes/tag', tag: tag, classname: class_name %>
<% end %>
