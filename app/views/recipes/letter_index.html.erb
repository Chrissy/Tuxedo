<% cache(index_letter_cache_key(@elements, Recipe, params[:letter])) do %>
  <%= render 'shared/index_header', :title => "Cocktail Recipes Index: #{params[:letter].upcase}" %>
  <%= render 'shared/index_menu' %>
  <%= render 'shared/index_body', :controller => :recipes, :elements => @elements %>
  <%= render 'shared/index_alphabet_menu', :controller => :recipes, :title => 'Cocktails A-Z' %>
  <%= render 'shared/breadcrumbs_for_letter', :element => Recipe.new, :letter => params[:letter]  %>
<% end %>
