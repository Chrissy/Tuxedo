<div class="header recipe">
  <div class="header-content">
    <%= filepicker_image_tag @recipe.image, w: 940, h: 540, fit: 'crop', crop: "0,0,940,540", align: "center,center" %>
  </div>
</div>

<div class="content recipe">
  <div class="components">
    <%= @recipe.recipe_to_html %>
  </div>
  <div class="description">
    <h1 class="header-title"><%= @recipe.name %></h1>
    <%= @recipe.description %>
  </div>
</div>

<a href="<%= edit_url() %>">edit</a>