<% cache(cache_key(@recipe, "show")) do %>
  <div class="header recipe">
    <%= render "shared/header", :element => @recipe %> 
  </div>

  <div class="content recipe">
    <div class="aside">
      <%= @recipe.recipe_as_html %>
    </div>
    <div class="primary" itemprop="description">
      <%= @recipe.description_to_html %>
      <%= render 'recommends', :recommends => @recipe.recommends if @recipe.recommends.present? %>
    </div>
  </div>
  
  <%= render 'footer', :recipe => @recipe %>
<% end %>