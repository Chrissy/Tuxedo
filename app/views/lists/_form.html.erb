<%= form_for @list, url: {action: form_action()}, html: {method: "post"} do |f| %>
  <div class="form_block primary">
    <%= f.text_field :name, :value => default_text(:name), :placeholder => "name" %>
    <%= f.text_area :content_as_markdown, :value => default_text(:content_as_markdown), :placeholder => "list content", :class => 'autocomplete recipes components lists' %>
    <%= render "shared/image_options", :element => @list, :f => f %>
    <label>Never make me tall!</label>
    <%= f.check_box :never_make_me_tall, :value => default_text(:never_make_me_tall); %><br/>
    <%= f.submit(submit_text()) %>
    <%= link_to "delete", action: "delete" if @list.id %>
  </div>
<% end %>