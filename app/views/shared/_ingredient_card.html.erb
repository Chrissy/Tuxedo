<div class="ingredient-card">
  <div class="label label--bottom-border ingredient-card__label">Ingredient:&nbsp;<%= ingredient.name %></div>
  <%= ingredient_card_image(ingredient, "ingredient-card__image") %>
  <% while ingredient.description.present? do %>
    <div class="ingredient-card__description">
      <%= ingredient.description %>
    </div>
  <% end %>
  <div class="ingredient-card__recipes">
    <% ingredient.classic_recipes(3).each do |recipe| %>
      <a class="ingredient-card__recipe" href="<%= recipe.url %>%">
        <strong><%= recipe.name %>:</strong>
        <%= recipe.components[0..2].map(&:name).join(", ") %>
      </a>
    <% end %>
  </div>
</div>
