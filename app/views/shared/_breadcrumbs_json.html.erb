<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "item": {
      "@id": "<%= root_url %>",
      "name": "Home"
    }
  },{
    "@type": "ListItem",
    "position": 2,
    "item": {
      "@id": "<%= url_for controller: element.class.to_s.tableize, action: 'index', :only_path => false %>",
      "name": "<%= element.type_for_display.titleize.pluralize %>"
    }
  },{
    "@type": "ListItem",
    "position": 3,
    "item": {
      "@id": "<%= url_for controller: element.class.to_s.tableize, action: 'letter_index', letter: element.name[0].downcase, :only_path => false %>",
      "name": "<%= element.name[0].upcase %>"
    }
  },{
    "@type": "ListItem",
    "position": 4,
    "item": {
      "@id": "/recipes/name-here",
      "name": "Recipe Name Here"
    }
  }]
}
</script>
