<div class="header short">
  <div class="header-content">
    <%= index_header_image %>
    <h1 class="header-title small">Cocktail <%= @type %> Index</h1>
  </div>
</div>

<%= render 'shared/index_menu' %>

<div class="content grid">
  <% @elements.group_by { |element| element.name[0].upcase }.each do |letter, elements| %>
    <h1 class="index-letter-label"><%= letter %></h1>
    <%= render partial: 'shared/index_item', collection: elements, as: :element if elements %>
  <% end %>
</div>
